<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#ffc72606" />
            <corners android:radius="4.0dip" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="#ffeaeaea" />
            <padding android:left="5.0dip" android:top="5.0dip" android:right="5.0dip" android:bottom="5.0dip" />
            <stroke android:width="2.0px" android:color="@color/gray" android:dashWidth="2.0px" />
            <corners android:radius="4.0dip" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#ffffffff" />
            <stroke android:width="2.0px" android:color="#ffc72606" android:dashWidth="2.0px" />
            <corners android:radius="4.0dip" />
        </shape>
    </item>
</selector>