<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:minHeight="88dp">

    <!-- Med Name -->
    <TextView
        android:id="@+id/med_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:textSize="16sp"
        android:fontFamily="sans-serif"
        android:text="Hello"/>

    <!-- Med Type -->
    <TextView
        android:id="@+id/med_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:fontFamily="sans-serif"
        android:text="Hello"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/med_name" />

    <!-- Med Duration -->
    <TextView
        android:id="@+id/med_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_marginLeft="16dp"
        android:textSize="14sp"
        android:fontFamily="sans-serif"
        android:layout_below="@id/med_name"
        android:text="Hello"/>

    <!-- Med Interval -->
    <TextView
        android:id="@+id/med_interval"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/med_duration"
        android:textSize="14sp"
        android:fontFamily="sans-serif"
        android:layout_below="@id/med_name"
        android:text="Hello"/>

    <!-- Med Intake Mode -->
    <TextView
        android:id="@+id/med_intake_mode"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="20dp"
        android:textSize="14sp"
        android:fontFamily="sans-serif"
        android:layout_below="@id/med_duration"
        android:text="Hello"/>

</RelativeLayout>