<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.skoruz.amwell.patient.MedicationSearch">

    <EditText
        android:id="@+id/med_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/med_search"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        android:padding="8dp"
        android:drawableStart="@drawable/ic_action_action_search"
        android:drawableLeft="@drawable/ic_action_action_search"
        android:background="@drawable/edittextsearch_style"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/medList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/med_search"
        android:background="@color/white"/>

</RelativeLayout>
