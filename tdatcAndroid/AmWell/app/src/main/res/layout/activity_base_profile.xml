                    <LinearLayout android:orientation="horizontal" android:id="@+id/doctor_profile_ll_practice_gallery" android:paddingLeft="@dimen/padding_16" android:paddingTop="@dimen/margin_8" android:paddingRight="@dimen/padding_16" android:paddingBottom="@dimen/margin_8" android:visibility="visible" android:layout_width="fill_parent" android:layout_height="fill_parent">
