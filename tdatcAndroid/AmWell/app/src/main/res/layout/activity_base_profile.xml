                            <android.support.v7.widget.RecyclerView android:layout_gravity="end|center" android:id="@+id/doctor_profile_rr_practice_photo" android:scrollbars="none" android:clipToPadding="false" android:layout_width="fill_parent" android:layout_height="56.0dip" android:minHeight="48.0dip" />
