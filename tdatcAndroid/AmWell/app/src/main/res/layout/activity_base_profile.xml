        <ImageView android:layout_gravity="bottom|center|right" android:id="@+id/doctor_profile_iv_doctor_photo" android:layout_width="@dimen/header_logo_size" android:layout_height="@dimen/header_logo_size" android:layout_marginRight="16.0dip" android:layout_marginBottom="@dimen/doctor_image_margin" android:src="@drawable/background_default_no_doctor" android:scaleType="centerCrop" app:maskDrawable="@drawable/mask_oval" app:borderDrawable="@drawable/mask_oval_white" app:desaturateOnPress="true" />
