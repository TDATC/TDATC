<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.skoruz.amwell.patient.MedicineRemainderFragment">

    <ListView
        android:id="@+id/med_remainder_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp">
    </ListView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/color_available"
        android:minHeight="60dp">

        <TextView
            android:id="@+id/medRemaindersText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:text="Remainders Read"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="@color/white"
            android:textSize="15sp"/>

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/med_switch_compat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_gravity="center_horizontal|center_vertical"
            android:checked="false"
            android:textOff="OFF"
            android:textOn="ON"
            app:showText="false"/>
    </LinearLayout>

</FrameLayout>
