
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#FFFFFF"
    tools:context="com.skoruz.amwell.patient.HealthRecord">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/grid_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MEASUREMENT TOOLS"
            android:textSize="16sp"
            android:fontFamily="sans-serif" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_marginTop="8dp"
            android:background="#c0c0c0"/>

        <com.skoruz.amwell.utils.ExpandableHeightGridView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:isScrollContainer="false"
            android:numColumns="4"
            android:stretchMode="columnWidth"
            android:id="@+id/grid" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PERSONAL HEALTH HISTORY"
            android:textSize="16sp"
            android:layout_marginTop="6dp"
            android:fontFamily="sans-serif"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_marginTop="8dp"
            android:background="#c0c0c0"/>

        <com.skoruz.amwell.utils.ExpandableHeightGridView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:columnWidth="100dp"
            android:isScrollContainer="false"
            android:numColumns="4"
            android:stretchMode="columnWidth"
            android:id="@+id/personal_grid" />>

    </LinearLayout>
</ScrollView>