<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:minHeight="88dp">

    <!-- Med Name -->
    <TextView
        android:id="@+id/allergy_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_marginTop="16dp"
        android:paddingStart="16dp"
        android:paddingLeft="16dp"
        android:paddingEnd="0dp"
        android:paddingRight="0dp"
        android:textSize="16sp"
        android:fontFamily="sans-serif"
        android:text="Hello"/>

    <!-- Med Type -->
    <TextView
        android:id="@+id/allergy_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:paddingStart="16dp"
        android:paddingLeft="16dp"
        android:paddingEnd="16dp"
        android:paddingRight="16dp"
        android:fontFamily="sans-serif"
        android:text="Hello"
        android:layout_marginTop="16dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        />

    <!-- Med Duration -->
    <TextView
        android:id="@+id/allergy_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingLeft="16dp"
        android:paddingEnd="0dp"
        android:paddingRight="0dp"
        android:textSize="14sp"
        android:fontFamily="sans-serif"
        android:layout_below="@id/allergy_name"
        android:text="Hello"/>

    <!-- Med Interval -->
    <TextView
        android:id="@+id/allergy_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingLeft="16dp"
        android:paddingEnd="16dp"
        android:paddingRight="16dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:textSize="14sp"
        android:fontFamily="sans-serif"
        android:layout_below="@id/allergy_name"
        android:text="Hello"/>

    <!-- Med Intake Mode -->
    <TextView
        android:id="@+id/allergy_date"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingLeft="16dp"
        android:paddingEnd="0dp"
        android:paddingRight="0dp"
        android:textSize="14sp"
        android:fontFamily="sans-serif"
        android:layout_below="@id/allergy_type"
        android:text="Hello"/>

</RelativeLayout>