<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <!--   your app branding color for the app bar -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MeasurementList" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--   your app branding color for the app bar -->
        <item name="colorPrimary">#3F51B5</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">#303F9F</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">#FF4081</item>
    </style>

    <style name="BaseButtonStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@drawable/selector_button_edit_rounded</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">36.0dip</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="separator">
        <item name="android:background">@color/divider</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1.0dip</item>
    </style>

    <style name="BaseIconLabelStyle">
        <item name="android:layout_width">@dimen/icon_width</item>
        <item name="android:layout_height">@dimen/icon_height</item>
        <item name="android:layout_marginLeft">@dimen/margin_16</item>
        <item name="android:layout_marginTop">@dimen/margin_8</item>
        <item name="android:layout_marginRight">@dimen/margin_32</item>
        <item name="android:layout_marginBottom">@dimen/margin_8</item>
    </style>
    <style name="BaseEditTextStyle">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@color/grey_800</item>
        <item name="android:textColorHint">@color/grey_500</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="progress_bar" parent="@style/Widget.AppCompat.ProgressBar">
        <item name="android:layout_width">70.0dip</item>
        <item name="android:layout_height">70.0dip</item>
    </style>
    <style name="BaseProgressStyle" parent="@style/Widget.AppCompat.ProgressBar">
        <item name="android:layout_width">72.0dip</item>
        <item name="android:layout_height">72.0dip</item>
    </style>
    <style name="ShadowStyle">
        <item name="z_depth">z_depth1</item>
        <item name="z_depth_shape">rect</item>
        <item name="z_depth_paddingLeft">z_depth0</item>
        <item name="z_depth_paddingTop">z_depth0</item>
        <item name="z_depth_paddingRight">z_depth0</item>
        <item name="z_depth_paddingBottom">z_depth2</item>
    </style>
    <style name="ShadowStyle.One" parent="@style/ShadowStyle">
        <item name="z_depth">z_depth1</item>
        <item name="z_depth_paddingBottom">z_depth2</item>
    </style>
    <style name="ShadowStyle.Zero" parent="@style/ShadowStyle">
        <item name="z_depth">z_depth0</item>
        <item name="z_depth_paddingBottom">z_depth2</item>
    </style>
    <style name="ToolbarPopup" parent="@style/Widget.AppCompat.Light.PopupMenu">
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@color/textColor</item>
    </style>
    <style name="ToolbarSlidingDark" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="navigationIcon">@drawable/ic_close_dark</item>
    </style>
    <style name="ToolbarSlidingLightText" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@color/transparent</item>
        <item name="background">@color/transparent</item>
        <item name="navigationIcon">@drawable/ic_close</item>
    </style>
    <style name="ToolbarSubTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">12.0sp</item>
    </style>
    <style name="ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">17.0sp</item>
    </style>
    <style name="ListProgress" parent="@style/Widget.AppCompat.ProgressBar">
        <item name="android:layout_width">70.0dip</item>
        <item name="android:layout_height">70.0dip</item>
    </style>
    <style name="BorderlessButtonFabric">
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/fabric_list_selector_white</item>
        <item name="android:paddingLeft">4.0dip</item>
        <item name="android:paddingTop">4.0dip</item>
        <item name="android:paddingRight">4.0dip</item>
        <item name="android:paddingBottom">4.0dip</item>
        <item name="android:clickable">true</item>
        <item name="android:minHeight">48.0dip</item>
    </style>
    <style name="BorderlessButtonFabric.Color" parent="@style/BorderlessButtonFabric">
        <item name="android:background">@drawable/fabric_list_selector_holo_light</item>
    </style>
    <style name="BorderlessButtonFabric.ColorDarkBlue" parent="@style/BorderlessButtonFabric">
        <item name="android:background">@drawable/fabric_list_selector_holo_dark</item>
    </style>
    <style name="BorderlessButtonFabric.ColorFilled" parent="@style/BorderlessButtonFabric">
        <item name="android:background">@drawable/fabric_list_selector_blue</item>
    </style>
    <style name="BorderlessButtonFabric.ColorGlass" parent="@style/BorderlessButtonFabric">
        <item name="android:background">@drawable/fabric_list_selector_glass</item>
    </style>
    <style name="BorderlessButtonFabric.ColorWhite" parent="@style/BorderlessButtonFabric">
        <item name="android:background">@drawable/fabric_list_selector_holo_white</item>
    </style>
    <style name="BorderlessButtonFabricLeftAligned">
        <item name="android:textSize">@dimen/size_dp_availability</item>
        <item name="android:textColor">@color/primary_blue</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/fabric_list_selector_glass</item>
        <item name="android:padding">4.0dip</item>
        <item name="android:clickable">true</item>
    </style>
    <style name="BorderlessPaddinglessButtonFabricLeftAligned">
        <item name="android:textSize">@dimen/size_dp_availability</item>
        <item name="android:textColor">@color/primary_blue</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/fabric_list_selector_glass</item>
        <item name="android:clickable">true</item>
    </style>
</resources>
